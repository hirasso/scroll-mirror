{
  "name": "scroll-mirror",
  "version": "0.0.1",
  "description": "Sync scroll positions of overflowing containers on your page",
  "author": {
    "name": "Rasso Hilber",
    "email": "mail@rassohilber.com",
    "url": "https://rassohilber.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hirasso/scroll-mirror.git"
  },
  "license": "ISC",
  "private": true,
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.modern.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "format": "npx prettier 'src/**/*.{js,ts,mjs}' --write",
    "build": "npm run clean && npm run build:module && npm run build:bundle",
    "build:module": "BROWSERSLIST_ENV=modern microbundle src/index.ts --format modern,esm,cjs",
    "build:bundle": "BROWSERSLIST_ENV=production microbundle src/index.ts --format umd --external none",
    "watch": "BROWSERSLIST_ENV=development microbundle src/index.ts --watch --format modern",
    "prepublishOnly": "npm run build",
    "test": "npm run test:e2e",
    "test:e2e": "npx playwright test --config ./tests/config/playwright.config.ts",
    "test:e2e:serve": "npx browser-sync start --config ./tests/config/browsersync.config.cjs",
    "test:e2e:watch": "concurrently \"npm:test:e2e -- --ui\" \"npm:watch -- --output tests/fixtures/dist/index.js\" -p none"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "microbundle": "^0.15.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
