{
  "name": "scroll-mirror",
  "version": "0.0.1",
  "description": "Sync scroll positions of overflowing containers on your page",
  "author": {
    "name": "Rasso Hilber",
    "email": "mail@rassohilber.com",
    "url": "https://rassohilber.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hirasso/scroll-mirror.git"
  },
  "license": "ISC",
  "private": true,
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.modern.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "format": "npx prettier 'src/**/*.{js,ts,mjs}' --write",
    "build": "npm run clean && npm run build:module && npm run build:bundle",
    "build:module": "BROWSERSLIST_ENV=modern microbundle src/index.ts -f modern,esm,cjs",
    "build:bundle": "BROWSERSLIST_ENV=production microbundle src/index.ts -f umd --external none",
    "watch": "npm run clean && BROWSERSLIST_ENV=development microbundle src/index.ts -w -f modern -o tests/fixtures/dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "npx playwright test --config ./tests/config/playwright.config.ts",
    "test:e2e:ui": "npx playwright test --ui --config ./tests/config/playwright.config.ts",
    "test:e2e:dev": "concurrently \"npm:test:e2e:ui\" \"npm:watch\"",
    "test:e2e:serve": "npx serve -n -S -L -p 8274 --config ./tests/config/serve.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "concurrently": "^8.2.2",
    "microbundle": "^0.15.1",
    "prettier": "^3.1.0",
    "serve": "^14.2.1"
  }
}
