---
import Tiles from "./Tiles.astro";
---

<h2 class="is-h2">Both directions</h2>
<div class="wrap wrap--both">
  <div class="pane pane--both">
    <div class="scroller --both" data-testid="first-both">
      <Tiles amount={200} direction="both" uniqueid="first-both" />
      <i data-testid="first-both-end"></i>
    </div>
  </div>
  <div class="pane pane--both">
    <div class="scroller --both" data-testid="second-both">
      <Tiles amount={300} direction="both" uniqueid="second-both" />
      <i data-testid="second-both-end"></i>
    </div>
  </div>
  <div class="pane pane--both">
    <div class="scroller --both" data-testid="third-both">
      <Tiles amount={250} direction="both" uniqueid="third-both" />
      <i data-testid="third-both-end"></i>
    </div>
  </div>
</div>
<style>
  .wrap {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }
  .pane + .pane {
    border-left: var(--border-style);
    margin-left: -1px;
  }

  .scroller {
    aspect-ratio: 1;
    overflow: auto;
  }
  @media (max-width: 800px) {
    .wrap {
      grid-template-columns: repeat(2, 1fr);
    }
    .pane:last-child {
      display: none;
    }
  }
</style>
