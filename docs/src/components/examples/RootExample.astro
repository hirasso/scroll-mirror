---
import Tiles from "./Tiles.astro";
---

<aside class="scroller scrollbars:hide" data-testid="sidebar">
  <Tiles amount={70} direction="vertical" uniqueid="sidebar" />
</aside>
<style>
  .scroller {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    height: min(100% - 2rem, max(300px, 40svw));
    width: min(400px, 70%);
    z-index: 3;
    background: black;
    overflow: auto;
    transition: transform 200ms ease-out;
    box-shadow: -10px 0px 20px rgb(0 0 0 / 0.2);
    border-radius: 1rem;
  }
  .scroller.--show {
    transform: translateX(0);
  }
  .header {
    padding: var(--half-gap);
    position: sticky;
    top: 0;
    background: #000;
    display: flex;
    gap: var(--half-gap);
    grid-template-columns: 1fr 100px;
    align-items: flex-start;
  }
</style>
