---
import Tiles from "./Tiles.astro";
---

<div class="wrap">
  <div class="pane">
    <div class="scroller --vertical" data-testid="first-vertical">
      <Tiles amount={60} direction="vertical" uniqueid="first-vertical" />
      <i data-testid="first-vertical-end"></i>
    </div>
  </div>
  <div class="pane">
    <div class="scroller --vertical" data-testid="second-vertical">
      <Tiles amount={20} direction="vertical" uniqueid="second-vertical" />
      <i data-testid="second-vertical-end"></i>
    </div>
  </div>
  <div class="pane">
    <div class="scroller --vertical" data-testid="third-vertical">
      <Tiles amount={40} direction="vertical" uniqueid="third-vertical" />
      <i data-testid="third-vertical-end"></i>
    </div>
  </div>
</div>

<style>
  .wrap {
    display: grid;
    grid-template-columns: repeat(3, 33.33333%);
  }
  .pane + .pane {
    border-left: var(--border-style);
    margin-left: -1px;
  }
  .scroller {
    aspect-ratio: 1 / 0.9;
    overflow: auto;
  }
  @media (max-width: 800px) {
    .wrap {
      grid-template-columns: repeat(2, 50%);
    }
    .pane:last-child {
      display: none;
    }
  }
</style>
